<div class="page-header">
	<h4>
		<%= link_to @course.name, @course, style: "color: black" %>
		<small8><%= link_to @topic.title, @topic, style: "color: black" %></small8>
		<small6><%= link_to @track.title, @track, style: "color: black" %></small6>
		<% if student_signed_in? %>
			<%=button_tag 'Ask Facebook', type: 'Button', id:'facebook', 
				onClick: "openBackWin'/facebook', 'Facebook')", class: "pull-right" %>
		<% end %>
	</h4>
</div>

<br><br>
<div class='problem'>
	<label><%= @problem.title %></label><br>
	<%= @problem.description %>
	<% if student_signed_in? %>
		<% track_progess = TrackProgression.get_progress(current_student,
		@problem.track.topic) %> 
		<% if track_progess >= @problem.track.difficulty %>
			<table width='100%'>
				<tr>
					<td width='80%'>
						<%= render partial: "solutions/new"%>
					</td>
					<td style='vertical-align:top;'>
						<div style='margin-left:1em;'>
							<b>Memory Contents:</b>
							<div id="memory" class="fixed-horizontal"></div>
							<br><br><br><br>
							<b>Hints:</b><br><br>
							<%= render partial: "hints/give" %>
							<br><br>
							<b>Tips:</b><br><br>
						</div>
					</td>
				</tr>
			</table>
		<% end %>
	<% end %>
</div>