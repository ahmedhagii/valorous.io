<div class= "left-box" >
	<div class="xob">
		<div class = "course_info panel-body" >
			<div class= "row course_title">
				<div class="course_code"><%= @course.code %></div>
				<div class="course_name"><%= @course.name %></div>
				<% if current_lecturer %>
					<div class="course_manage">
							<%= link_to "Manage", { :controller => 'courses', :action => 'edit',
							:method => :get, :id => params[:id] }, class: ""	%>
					</div>
				<% end %>
			</div>
			<div class="row">
				<div class="course_sem">
					Semester <%= @course.semester %>
					Class <%= @course.year %>
				</div>
			</div>
		</div>
		<div class="row course_description">
			<p>About the Course</p>
			<% if @course.description %>
				<div class="description-body" >
					<%= @course.description %> Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
					tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam,
					quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo
					consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse
					cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non
					proident, sunt in culpa qui officia deserunt mollit anim id est laborum.
				</div>
			<% end %>
		</div>
		<div class="view_discussion">
			<%= link_to "View Discussion Board", { :controller => 'discussion_boards', :action => 'show', :id => params[:id] }, method: :get %>
		</div>
		<div class="view_discussion">
			<%= link_to "View Resources", course_resources_path(@course)%>
		</div>
		<div class="tag-area"> 
			<span class="view_discussion"> Tags : </span>	
			<% @course.tags.each do |tag| %>
				<span class="tag"><%= tag.name %></span>
			<% end %>	
		</div>
				
	</div>

	<div class="xox">
		<div class="well bell">
			<div class="box-title"> Topics
				<% if lecturer_signed_in? || teaching_assistant_signed_in? %>
					<%= link_to "Add Topic", {:controller => 'topics', :action => 'new',
						:course_id => @course.id}, class: "btn btn-default", method: :post %> 
				<% end %>
			</div>
				<% if lecturer_signed_in? %>
					<%= link_to "Add Course", new_course_path %>
				<% end %>
		</div>
	</div>
	
	<div class="well">
		<% if @courses.any? %>
			<div class="row">
				<% @courses.each do |course| %>
					<% if course.visible || lecturer_signed_in? %>
					<div class="container col-sm-6">
						<div class="well course-box" style="background-color: #D7DDE2 !important;">
							<h3><%= link_to course.name, course %><hr></h3>
							<label class="c-description-label"><%= crop(course.description,200) %></label>
							<br><br>
							<% if lecturer_signed_in? %>
								<% if current_lecturer.courses.find(course) %>
									<%= link_to "Manage ", edit_course_path(course)%><b>|</b>	
								<% end %>
								<%= link_to " View Disscussion Board", course.discussion_board%>
							<% elsif student_signed_in? %>
								<div class="row">
									<div class="col-sm-4">
										<%= link_to " Disscussion Board", course.discussion_board%>
										<% elsif student_signed_in? && course.visible %>
											<div class="row">
												<div class="col-sm-4">
													<% if lecturer_signed_in? %>
														<% if current_lecturer.courses.find(course) %>
															<%= link_to "Manage ", edit_course_path(course)%>	
														<% end %>
													<% elsif student_signed_in? %>
														<% if @share[course.id] == "Show" %>
															<%= button_to "Show Performance", {:controller => 'courses', :action => 'share',
																:id => course.id, :value => true}, class: "switch_sharing show-p", style: "text-decoration:none" %>
														<% else %>
															<%= button_to "Hide Performance", {:controller => 'courses', :action => 'share',
																:id => course.id, :value => false}, class: "switch_sharing hide-p", style: "text-decoration:none;" %>
														<% end %>
												</div>
												<div class="col-sm-8"><b>|</b><%= link_to " Disscussion Board", course.discussion_board%>
												</div>
											</div>
											<div class="col-sm-8"><b>|</b><%= link_to " View Disscussion Board", course.discussion_board%>
											</div>
										<% end %>
									</div>
								</div>
							<% end %>
						</div>
					<% end %>
				<%end%>
			</div>
		<% end %>
		<%= link_to "Sign up for a course" , {:controller => 'courses', :action => 'sign_up'}, class: 'course_sign_up' %>
	</div>
</div>
